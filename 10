--------Mercury tilt switch

import RPi.GPIO as GPIO
import time

pin = 4
GPIO.setmode(GPIO.BCM)
GPIO.setup(pin, GPIO.IN)

while True:
    if GPIO.input(pin):
        print("Tilt Detected")
    else:
        print("Stable")
    time.sleep(0.2)


--------Laser emitter

import RPi.GPIO as GPIO
import time

pin = 4
GPIO.setmode(GPIO.BCM)
GPIO.setup(pin, GPIO.OUT)

while True:
    GPIO.output(pin, GPIO.HIGH)
    print("Laser ON")
    time.sleep(1)
    GPIO.output(pin, GPIO.LOW)
    print("Laser OFF")
    time.sleep(1)
