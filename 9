---------Touch sensor

import RPi.GPIO as GPIO
import time

pin = 4
GPIO.setmode(GPIO.BCM)
GPIO.setup(pin, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)

while True:
    if GPIO.input(pin):
        print("Touch Detected")
    else:
        print("No Touch")
    time.sleep(0.2)

---------Tracking sensor

import RPi.GPIO as GPIO
import time

pin = 4
GPIO.setmode(GPIO.BCM)
GPIO.setup(pin, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)

while True:
    if GPIO.input(pin) == 0:
        print("Black Line")
    else:
        print("White Surface")
    time.sleep(0.2)
